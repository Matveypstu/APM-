#include <iostream>
#include <thread>
#include <vector>

void processDocument(const std::string& filename){
     // Имитация обработки файла
     std::cout<<"Обработка файла "<<filename<<"\n";
     // Здесь можно вставить парсинг или анализ документа
}

int main() {
     std::vector<std::thread> threads;

     for(int i=1;i<=10;++i){
         threads.emplace_back(processDocument,"документ_"+std::__cxx11_string(std::__cxx11_char_traits<char>::to_char_type(i+'0'))+".txt");
     }

     for(auto& t:threads)
         t.join();

     return 0;
}
